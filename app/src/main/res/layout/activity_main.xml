<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.marswang.whj.acctest2.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始测试"
        android:id="@+id/begin"
        android:onClick="beginClick"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <!--<Button-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="读取"-->
        <!--android:id="@+id/read"-->
        <!--android:onClick="readClick"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_toEndOf="@+id/begin"/>-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        android:textSize="50sp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/begin"
        android:layout_alignParentBottom="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="数据列表显示"
        android:onClick="dataShowClick"
        android:id="@+id/dataShow"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时域波形"
        android:id="@+id/drawChar"
        android:onClick="drawCharClick"
        android:layout_below="@+id/button3"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="数据写入SDCard"
        android:id="@+id/writeSDCard"
        android:onClick="writeSDCard"
        android:layout_below="@+id/dataShow"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="静止采样加速度均值"
        android:id="@+id/button"
        android:onClick="getStaticAvg"
        android:layout_below="@+id/begin"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="频谱图"
        android:id="@+id/button2"
        android:onClick="drawCharClick2"
        android:layout_below="@+id/drawChar"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FFT"
        android:onClick="writeSDCard2"
        android:id="@+id/button3"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="检验"
        android:onClick="test"
        android:id="@+id/button4"
        android:layout_below="@+id/button2"
        android:layout_alignParentStart="true"/>
</RelativeLayout>
